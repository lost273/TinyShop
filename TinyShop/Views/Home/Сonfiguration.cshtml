@model IEnumerable<TinyShop.Models.Product>

@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@
<h2>Edit product</h2>

@using (Html.BeginForm("ChangeProduct", "Home", FormMethod.Post)) {
    <label>Product name:</label>
    <div class="row">
        <div class="col-sm-4">
            @foreach (var product in Model) {
                <input type="hidden" name="ProductId" class="form-control" value="@product.ProductId">
                <input type="text" name="Name" class="form-control" value="@product.Name">
            }
        </div>
    </div>
    <br />
    <input class="btn btn-success" type="submit" value="Change">
}





<h2>Add new product</h2>

@using (Html.BeginForm("Сonfiguration", "Home", FormMethod.Post)) {
    <label>Product name:</label>
    <div class="row">
        <div class="col-sm-4">
            <input type="text" name="Name" class="form-control" placeholder="Enter the name...">
        </div>
    </div>
    <br />
    <input class="btn btn-success" type="submit" value="Add">
}