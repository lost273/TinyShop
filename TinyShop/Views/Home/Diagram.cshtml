<script>
    var namesArray = @Html.Raw(Json.Encode(ViewBag.NAMES));
    var totalArray = @Html.Raw(Json.Encode(ViewBag.TOTAL));
</script>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <i class="icon-calendar"></i>
                <h3 class="panel-title">Current date - @DateTime.Today.ToLongDateString()</h3>
                <br />
                <form class="form-inline" role="form" action="/Home/Diagram" method="post">
                    <div class="form-group">
                        <label>Period №1 : Month</label>
                        <select name="monthOne" class="form-control" selected="1">
                            @for (int i = 1; i <= 12; i++) {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Period №1 : Year</label>
                        <select name="yearOne" class="form-control">
                            @for (int i = 2015; i <= 2020; i++) {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <br/>
                    <div class="form-group">
                        <label>Period №2 : Month</label>
                        <select name="monthTwo" class="form-control" selected="1">
                            @for (int i = 1; i <= 12; i++) {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Period №2 : Year</label>
                        <select name="yearTwo" class="form-control">
                            @for (int i = 2015; i <= 2020; i++) {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <br/>
                        <input type="submit" class="btn btn-success" name="action" value="show">
                </form>
            </div>
            <div class="panel-body">
                <div id="chart_container">
                    <canvas id="bar_chart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/scripts/Chart.js")
    @Scripts.Render("~/scripts/chartone.js")
}