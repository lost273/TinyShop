@model List<TinyShop.Models.Row>
@{
    ViewBag.Title = "Home Page";
}

<!-- Generate new row-->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <i class="icon-calendar"></i>
                <h3 class="panel-title">@ViewBag.Time</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form">
                    <div class="form-group">
                        <select class="form-control">
                            @foreach (var product in ViewBag.Products) {
                                <option value="@product.Name">@product.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="q">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Cost">
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="sum" readonly>
                    </div>
                    <br/>

                    @foreach (var row in Model) {

                        <input type="hidden" name="product.ProductId" class="form-control" value="@row.RowId">


                        <div class="form-group">
                            <input type="text" class="form-control" value="@row.Quantity">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" value="@row.Cost">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" value="@row.Quantity + @row.Cost" readonly>
                        </div>
                    }
                    <input class="btn btn-success" type="button" value="Save">

                </form>
            </div>
        </div>
    </div>
</div>


<h2>Edit or delete product:</h2>

<div class="row">
    <div class="col-sm-4">
        @foreach (var row in Model) {
                using (Html.BeginForm("ChangeRow", "Home", FormMethod.Post)) {
                <div class="input-group">
                    <input type="hidden" name="row.RowId" class="form-control" value="@row.RowId">
                    <input type="hidden" name="row.Date" class="form-control" value="@row.Date">
                    <input type="text" name="row.Name" class="form-control" value="@row.Name">
                    <input type="text" name="row.Quantity" class="form-control" value="@row.Quantity">
                    <input type="text" name="row.Cost" class="form-control" value="@row.Cost">
                    <input type="text" name="row.Total" class="form-control" value="@row.Total">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-success" name="action" value="change">Change</button>
                        <button type="submit" class="btn btn-danger" name="action" value="delete">Delete</button>
                    </span>
                </div>
            }
        }
    </div>
</div>
<br />

<h2>Add new product:</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Post)) {
    <label>Product name:</label>
    <div class="row">
        <div class="col-sm-4">
            <div class="input-group">
                <input type="hidden" name="row.Date" class="form-control" value="@DateTime.Today.Date">
                <select name="row.Name" class="form-control">
                    @foreach (var product in ViewBag.Products) {
                        <option value="@product.Name">@product.Name</option>
                    }
                </select>
                <input type="text" name="row.Quantity" class="form-control">
                <input type="text" name="row.Cost" class="form-control">
                <input type="text" name="row.Total" class="form-control">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-success" value="Add">Add</button>
                </span>
            </div>
        </div>
    </div>
}
